@using CodeChallengeApp.ViewModel;
@model List<ProductViewModel>

@if (ViewData["SearchProductSuccessMsg"] != null)
{
	<div class="alert alert-success" role="alert">
		@ViewData["SearchProductSuccessMsg"]
	</div>
}

<table class="table table-light table-hover">
	<thead class="table-light">
		<tr>
			<th scope ="col">Action</th>
			<th scope="col">Product Name</th>
			<th scope="col">Description</th>
			<th scope="col">Quantity</th>
			<th scope="col">Price</th>
			<th scope="col">Code</th>
			<th scope="col">Image</th>
		</tr>
	</thead>
	<tbody>


		@foreach (var item in Model)
		{
			<tr>
				<td width="15%">
					<a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-success">Edit</a>
				</td>
				<td width="20%">
					@item.Name
				</td>
				<td width="15%">
					@item.Description
				</td>
				<td width="10%">
					@item.Quantity
				</td>
				<td width="10%">
					@item.Price
				</td>
				<td width="10%">
					@item.Code
				</td>
				<td width="20%">
					<img src="images/@item.ImageFileName" class="img-thumbnail" alt="" height=100 width=200 />
				</td>
			</tr>
		}
	</tbody>
</table>